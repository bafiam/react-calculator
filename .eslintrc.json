{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
    
  },
  "extends": ["airbnb", "plugin:react/recommended"],
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "import/no-unresolved": "off",
    "no-shadow": "off",
    "arrow-parens": ["error", "as-needed"],
    "jsx-a11y/href-no-hash": [0], 
    "jsx-a11y/img-has-alt": [0]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}